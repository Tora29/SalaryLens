generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 給与記録
model SalaryRecord {
  id                 String @id @default(cuid())
  year               Int
  month              Int
  baseSalary         Int    // 基本給
  overtime           Int    // 残業代
  bonus              Int    // 賞与
  deductions         Int    // 控除
  netSalary          Int    // 手取り
  fixedOvertimeHours Int    // 固定残業時間（45h上限）
  extraOvertimeHours Int    // 固定外残業時間（45-60h）
  over60OvertimeHours Int   // 60h超残業時間
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([year, month])
  @@map("salary_records")
}
